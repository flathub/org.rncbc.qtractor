{
    "app-id": "org.rncbc.qtractor",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.9",
    "sdk": "org.kde.Sdk",
    "command": "qtractor",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--device=all",
        "--filesystem=xdg-run/pipewire-0",
        "--filesystem=home",
        "--env=TMPDIR=/var/tmp",
        "--env=QT_ENABLE_HIGHDPI_SCALING=1"
    ],
    "add-extensions": {
        "org.freedesktop.LinuxAudio.Plugins": {
            "directory": "extensions/Plugins",
            "version": "24.08",
            "add-ld-path": "lib",
            "merge-dirs": "ladspa;dssi;lv2;vst;vst3;clap",
            "subdirectories": true,
            "no-autodownload": true
        }
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/man",
        "/share/doc",
        "*.a",
        "*.la"
    ],
    "modules": [
        "shared-modules/libmad/libmad.json",
        "shared-modules/linux-audio/ladspa.json",
        "shared-modules/linux-audio/liblo.json",
        "shared-modules/linux-audio/dssi.json",
        "shared-modules/linux-audio/lv2.json",
        "shared-modules/linux-audio/lilv.json",
        "shared-modules/linux-audio/fftw3f.json",
        "rubberband.json",
        "aubio.json",
        {
            "name": "qtractor",
            "buildsystem": "cmake-ninja",
            "build-options": {
                "env": [
                    "LADSPA_PATH=/app/lib/ladspa"
                ]
            },
            "post-install": [
                "mv ${FLATPAK_DEST}/bin/qtractor{,.bin}",
                "install -D qtractor.sh ${FLATPAK_DEST}/bin/qtractor",
                "install -d /app/extensions/Plugins"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://downloads.sourceforge.net/qtractor/qtractor-1.5.7.tar.gz",
                    "sha256": "7507326dae506519a2d46805c933a6ab316296204ac8dbb5f3bc57335f8e9e92"
                },
                {
                    "type": "file",
                    "path": "qtractor.sh"
                }
            ]
        }
    ]
}
