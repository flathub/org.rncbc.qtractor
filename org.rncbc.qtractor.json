{
    "app-id": "org.rncbc.qtractor",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.4",
    "sdk": "org.kde.Sdk",
    "command": "qtractor",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--device=all",
        "--filesystem=xdg-run/pipewire-0",
        "--system-talk-name=org.freedesktop.RealtimeKit1",
        "--filesystem=home",
        "--env=TMPDIR=/var/tmp",
        "--env=QT_ENABLE_HIGHDPI_SCALING=1",
        "--env=DSSI_PATH=/app/extensions/Plugins/dssi",
        "--env=LADSPA_PATH=/app/extensions/Plugins/ladspa:/app/lib/ladspa"
    ],
    "add-extensions": {
        "org.freedesktop.LinuxAudio.Plugins": {
            "directory": "extensions/Plugins",
            "version": "22.04",
            "add-ld-path": "lib",
            "merge-dirs": "ladspa;dssi;lv2;vst;vst3;clap",
            "subdirectories": true,
            "no-autodownload": true
        }
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/man",
        "/share/doc",
        "/share/gtk-doc",
        "*.a",
        "*.la"
    ],
    "modules": [
        "shared-modules/libmad/libmad.json",
        "shared-modules/linux-audio/ladspa.json",
        "shared-modules/linux-audio/jack2.json",
        "shared-modules/linux-audio/liblo.json",
        "shared-modules/linux-audio/dssi.json",
        "shared-modules/linux-audio/lv2.json",
        "shared-modules/linux-audio/lilv.json",
        "shared-modules/linux-audio/fftw3f.json",
        "shared-modules/gtk2/gtk2.json",
        {
            "name": "aubio",
            "buildsystem": "simple",
            "build-commands": [
                "python3 ./waf configure --prefix=/app --libdir=/app/lib --enable-fftw3f --enable-complex --enable-samplerate",
                "python3 ./waf build -j $FLATPAK_BUILDER_N_JOBS",
                "python3 ./waf install"
            ],
            "cleanup": [
                "/bin",
                "/include",
                "/lib/pkgconfig",
                "*.a"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": " http://aubio.org/pub/aubio-0.4.7.tar.bz2",
                    "sha256": "cbed4afec5ab3a1a6300c7e3af0a1369379aa94259f5e701a8ca905cdd9fa041"
                }
            ]
        },
        {
            "name": "rubberband",
            "buildsystem": "simple",
            "build-commands": [
                "make -f otherbuilds/Makefile.linux",
                "install -Dm644 -t /app/include/rubberband rubberband/RubberBandStretcher.h",
                "install -Dm644 -t /app/lib lib/librubberband.a",
                "install -Dm644 -t /app/lib/pkgconfig rubberband.pc"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://breakfastquay.com/files/releases/rubberband-3.1.2.tar.bz2",
                    "sha256": "dda7e257b14c59a1f59c5ccc4d6f19412039f77834275955aa0ff511779b98d2"
                },
                {
                    "type": "file",
                    "path": "rubberband.pc"
                }
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig",
                "/lib"
            ]
        },
        {
            "name": "qtractor",
            "buildsystem": "cmake-ninja",
            "build-options": {
                "env": [
                    "LADSPA_PATH=/app/lib/ladspa"
                ]
            },
            "config-opts": [
                "-DCONFIG_VST3SDK=/run/build/qtractor/vst3sdk"
            ],
            "post-install": [
                "mv ${FLATPAK_DEST}/bin/qtractor{,.bin}",
                "install -D qtractor.sh ${FLATPAK_DEST}/bin/qtractor",
                "install -d /app/extensions/Plugins"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://downloads.sourceforge.net/qtractor/qtractor-0.9.30.tar.gz",
                    "sha256": "34bdae1b59aae66dc838afb762896812c705b1875dd1f1cb6a409c31b14ced4e"
                },
                {
                    "type": "git",
                    "url": "https://github.com/steinbergmedia/vst3sdk.git",
                    "tag": "v3.7.6_build_18",
                    "dest": "vst3sdk"
                },
                {
                    "type": "file",
                    "path": "qtractor.sh"
                }
            ]
        }
    ]
}
