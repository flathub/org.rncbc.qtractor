{
    "app-id": "org.rncbc.qtractor",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.4",
    "sdk": "org.kde.Sdk",
    "command": "qtractor",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--device=all",
        "--filesystem=xdg-run/pipewire-0",
        "--filesystem=home",
        "--env=TMPDIR=/var/tmp",
        "--env=QT_ENABLE_HIGHDPI_SCALING=1"
    ],
    "add-extensions": {
        "org.freedesktop.LinuxAudio.Plugins": {
            "directory": "extensions/Plugins",
            "version": "22.08",
            "add-ld-path": "lib",
            "merge-dirs": "ladspa;dssi;lv2;vst;vst3;clap",
            "subdirectories": true,
            "no-autodownload": true
        }
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/man",
        "/share/doc",
        "/share/gtk-doc",
        "*.a",
        "*.la"
    ],
    "modules": [
        "shared-modules/libmad/libmad.json",
        "shared-modules/linux-audio/ladspa.json",
        "shared-modules/linux-audio/liblo.json",
        "shared-modules/linux-audio/dssi.json",
        "shared-modules/linux-audio/lv2.json",
        "shared-modules/linux-audio/lilv.json",
        "shared-modules/linux-audio/fftw3f.json",
        "shared-modules/gtk2/gtk2.json",
        {
            "name": "aubio",
            "buildsystem": "simple",
            "build-commands": [
                "python3 ./waf configure --prefix=/app --libdir=/app/lib --enable-fftw3f --enable-complex --enable-samplerate --disable-avcodec",
                "python3 ./waf build -j $FLATPAK_BUILDER_N_JOBS",
                "python3 ./waf install"
            ],
            "cleanup": [
                "/bin",
                "/include",
                "/lib/pkgconfig",
                "*.a"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://aubio.org/pub/aubio-0.4.9.tar.bz2",
                    "sha256": "d48282ae4dab83b3dc94c16cf011bcb63835c1c02b515490e1883049c3d1f3da"
                }
            ]
        },
        {
            "name": "rubberband",
            "buildsystem": "simple",
            "build-commands": [
                "make -f otherbuilds/Makefile.linux",
                "install -Dm644 -t /app/include/rubberband rubberband/RubberBandStretcher.h",
                "install -Dm644 -t /app/lib lib/librubberband.a",
                "install -Dm644 -t /app/lib/pkgconfig rubberband.pc"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://breakfastquay.com/files/releases/rubberband-3.2.1.tar.bz2",
                    "sha256": "82edacd0c50bfe56a6a85db1fcd4ca3346940ffe02843fc50f8b92f99a97d172"
                },
                {
                    "type": "file",
                    "path": "rubberband.pc"
                }
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig",
                "/lib"
            ]
        },
        {
            "name": "qtractor",
            "buildsystem": "cmake-ninja",
            "build-options": {
                "env": [
                    "LADSPA_PATH=/app/lib/ladspa"
                ]
            },
            "config-opts": [
                "-DCONFIG_VST3SDK=/run/build/qtractor/vst3sdk"
            ],
            "post-install": [
                "mv ${FLATPAK_DEST}/bin/qtractor{,.bin}",
                "install -D qtractor.sh ${FLATPAK_DEST}/bin/qtractor",
                "install -d /app/extensions/Plugins"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://downloads.sourceforge.net/qtractor/qtractor-0.9.34.tar.gz",
                    "sha256": "5f2e988ee011dc5f897c7d6446b05974f20d7084724a898d148725096528cf70"
                },
                {
                    "type": "git",
                    "url": "https://github.com/steinbergmedia/vst3sdk.git",
                    "tag": "v3.7.7_build_19",
                    "dest": "vst3sdk"
                },
                {
                    "type": "file",
                    "path": "qtractor.sh"
                }
            ]
        }
    ]
}
