{
    "name": "aubio",
    "buildsystem": "simple",
    "build-commands": [
        "python ./waf configure --prefix=/app --libdir=/app/lib --enable-fftw3f --enable-complex --enable-samplerate --disable-avcodec",
        "python ./waf build -j $FLATPAK_BUILDER_N_JOBS",
        "python ./waf install"
    ],
    "cleanup": [
        "/bin",
        "/include",
        "/lib/pkgconfig",
        "*.a"
    ],
    "sources": [
        {
            "type": "archive",
            "url": "https://github.com/aubio/aubio/archive/refs/tags/0.4.9.tar.gz",
            "sha256": "0f09bee62f752d2be3a620966f020e72a027fed6838d7e9389e8305507f12455"
        },
        {
            "type": "patch",
            "path": "patches/aubio-python.patch"
        }
    ]
}
